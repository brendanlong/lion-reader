{
  "name": "lion-reader",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "node scripts/copy-onnx-wasm.mjs",
    "dev": "concurrently --kill-others --names worker,next,discord \"pnpm dev:worker\" \"pnpm dev:next\" \"pnpm dev:discord-bot\"",
    "dev:next": "next dev --turbopack",
    "dev:worker": "tsx watch --clear-screen=false scripts/worker.ts",
    "dev:discord-bot": "tsx watch --clear-screen=false scripts/discord-bot.ts",
    "build": "next build --webpack",
    "build:worker": "node scripts/build-worker.mjs",
    "build:discord-bot": "node scripts/build-discord-bot.mjs",
    "build:migrate": "node scripts/build-migrate.mjs",
    "build:all": "pnpm build && pnpm build:worker && pnpm build:discord-bot && pnpm build:migrate",
    "start": "next start",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "knip": "knip --include files,dependencies,devDependencies,exports",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -- tsx scripts/migrate.ts",
    "db:schema": "dotenv -- tsx scripts/dump-schema.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "dotenv -- tsx scripts/seed.ts",
    "db:migrate:test": "dotenv -o -e .env.test -- tsx scripts/migrate.ts",
    "db:schema:test": "dotenv -o -e .env.test -- tsx scripts/dump-schema.ts",
    "test": "pnpm db:migrate:test && pnpm db:schema:test && dotenv -o -e .env.test -- vitest",
    "test:unit": "dotenv -o -e .env.test -- vitest run tests/unit",
    "test:integration": "pnpm db:migrate:test && pnpm db:schema:test && dotenv -o -e .env.test -- vitest run tests/integration",
    "worker": "tsx scripts/worker.ts",
    "mcp:serve": "dotenv -- tsx src/server/mcp/bin.ts",
    "discord-bot": "dotenv -- tsx scripts/discord-bot.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --fix --max-warnings 0 --no-warn-ignored",
      "prettier --write"
    ],
    "*.{json,md,css,scss,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.971.0",
    "@ducanh2912/next-pwa": "^10.2.9",
    "@mintplex-labs/piper-tts-web": "^1.0.4",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@mozilla/readability": "^0.6.0",
    "@sentry/nextjs": "^10.34.0",
    "@tanstack/react-query": "^5.90.19",
    "@trpc/client": "^11.8.1",
    "@trpc/react-query": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "arctic": "^3.7.0",
    "argon2": "^0.44.0",
    "concurrently": "^9.2.1",
    "discord.js": "^14.25.1",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "fast-xml-parser": "^5.3.3",
    "google-auth-library": "^10.5.0",
    "groq-sdk": "^0.37.0",
    "html-entities": "^2.6.0",
    "html-rewriter-wasm": "^0.4.1",
    "htmlparser2": "^10.0.0",
    "ioredis": "^5.9.2",
    "isomorphic-dompurify": "^2.35.0",
    "jsdom": "^27.4.0",
    "linkedom": "^0.18.12",
    "mammoth": "^1.11.0",
    "marked": "^17.0.1",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "onnxruntime-web": "1.18.0",
    "pg": "^8.17.1",
    "prom-client": "^15.1.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hotkeys-hook": "^5.2.3",
    "sentence-splitter": "^5.0.0",
    "sonner": "^2.0.7",
    "superjson": "^2.2.6",
    "trpc-to-openapi": "^3.1.0",
    "tsx": "^4.21.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.19.30",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "fake-indexeddb": "^6.2.5",
    "husky": "^9.1.7",
    "knip": "^5.82.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
}
