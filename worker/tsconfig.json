{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext", "webworker", "webworker.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["*.ts", "*.d.ts"]
}
